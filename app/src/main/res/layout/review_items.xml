<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    android:layout_marginTop="@dimen/marginTop5"
    card_view:cardUseCompatPadding="true"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:paddingBottom="@dimen/marginTop5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imageView"
                android:tag="image_tag"
                android:layout_width="100dp"
                android:background="@drawable/background_item_image"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:src="@drawable/flower"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                >

                <ImageView
                    android:id="@+id/delete"
                    android:tag="image_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_close"/>

                <TextView
                    android:id="@+id/for_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:paddingBottom="@dimen/marginTop5"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingRight="@dimen/marginTop10"
                    android:textSize="12dp"
                    android:text="Women Clothes"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

                <TextView
                    android:id="@+id/item_name"
                    android:layout_below="@+id/for_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_gravity="center_horizontal"
                    android:paddingRight="@dimen/marginTop10"
                    android:textSize="17dp"
                    android:text="Just a single item"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

                <TextView
                    android:id="@+id/tag_name"
                    android:layout_below="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_gravity="center_horizontal"
                    android:paddingRight="@dimen/marginTop10"
                    android:textSize="17dp"
                    android:text="Added into your Cart"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

                <TextView
                    android:gravity="bottom"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/item_price"
                    android:layout_below="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:paddingRight="15dp"
                    android:layout_alignParentRight="true"
                    android:text="$48,25"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            </RelativeLayout>
        </LinearLayout>


        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/marginTop10"
            android:paddingRight="@dimen/marginTop10"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:background="@drawable/background_spinner"
                android:layout_height="wrap_content">
                <Spinner
                    android:padding="@dimen/marginTop10"
                    android:id="@+id/spinner_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/size"  />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/background_spinner"
                android:layout_height="wrap_content">
                <Spinner
                    android:padding="@dimen/marginTop10"
                    android:id="@+id/spinner_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/color"  />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_marginRight="4dp"
                android:background="@drawable/background_spinner"
                android:layout_height="wrap_content">
                <Spinner
                    android:padding="@dimen/marginTop10"
                    android:id="@+id/spinner_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/amounts"  />

            </LinearLayout>

        </LinearLayout>
<View
    android:layout_marginTop="3dp"
    android:background="@color/frang_a_bg"
    android:layout_width="match_parent"
    android:layout_height="1dp"/>
</LinearLayout>

    </android.support.v7.widget.CardView>
