<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/marginTop5"
    android:paddingLeft="@dimen/marginTop10"
    android:paddingRight="@dimen/marginTop10">

    <RelativeLayout
        android:id="@+id/singleRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImg"
            android:layout_centerVertical="true"
            android:src="@drawable/bg_girl"
            android:layout_margin="4dp"
            android:layout_width="45dp"
            android:layout_height="45dp" />
           <!-- app:civ_border_width="1dp"
            app:civ_border_color="@color/colorPrimaryDark"-->

        <TextView
            android:id="@+id/pNametxt"
            android:text="User Name"
            android:textSize="18dp"
            android:maxLines="1"
            android:textColor="@color/title_notf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/userImg"
            android:layout_toEndOf="@+id/userImg"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/pJobProfiletxt"
            android:text="Job Profile"
            android:textSize="16dp"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pNametxt"
            android:layout_alignLeft="@+id/pNametxt"
            android:layout_alignStart="@+id/pNametxt" />

    </RelativeLayout>

    <View
        android:id="@+id/v1"
        android:layout_below="@+id/singleRow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#f2f2f2" />

    <TextView
        android:layout_below="@id/v1"
        android:id="@+id/details"
        android:textSize="14dp"
        android:padding="5dp"
        android:textColor="#afb4a2"
        android:text="@string/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:id="@+id/bottom_row"
        android:layout_below="@id/details"
        android:padding="@dimen/marginTop5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="4 days ago"
            android:textSize="12dp"
            android:textColor="#d9dcd1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/ic_share"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_below="@+id/bottom_row"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/marginTop5"
        android:background="#e6e3e3" />


</RelativeLayout>
</android.support.v7.widget.CardView>