<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/frang_a_bg"
    tools:context=".Check_Out_ShoppingActivity"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:padding="2dp"
            android:src="@drawable/ic_back"
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/check_out"
            android:textSize="18dp"
            android:paddingLeft="@dimen/marginTop30"
            android:textColor="@color/app_title_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/state_progress_bar"/>

    <TextView
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/marginTop10"
        android:padding="@dimen/marginTop10"
        android:text="Where should we ship?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/edittext_layout"/>

        <TextView
            android:textSize="@dimen/marginTop18"
            android:textStyle="normal"
            android:layout_marginLeft="@dimen/marginTop10"
            android:padding="@dimen/marginTop10"
            android:text="Create an account to continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

            <include layout="@layout/with_login_layout"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <TextView
                android:textAlignment="center"
                android:textSize="12dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:text="SIGN UP WITH E-MAIL"
                android:background="@drawable/background_null"
                android:padding="@dimen/marginTop5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

<include layout="@layout/check_out_footer"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
